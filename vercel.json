interface BuildCommand {
  command: string;
  output?: string;
}

interface EnvTemplate {
  [key: string]: string | undefined;
}

interface RedirectRule {
  source: string;
  destination: string;
  statusCode: number;
}

interface HeaderPolicy {
  source: string;
  headers: Array<{ key: string; value: string }>;
}

interface CacheStrategy {
  urlPattern: string;
  options?: { [key: string]: any };
}

interface FrameworkSettings {
  vercel?: { [key: string]: any };
  netlify?: { [key: string]: any };
}

interface DeployConfig {
  build: BuildCommand;
  env: EnvTemplate;
  redirects?: RedirectRule[];
  headers?: HeaderPolicy[];
  cache?: CacheStrategy[];
  framework?: FrameworkSettings;
}

export const deployConfig: DeployConfig = {
  build: {
    command: "next build",
    output: ".next"
  },
  env: {
    NEXT_PUBLIC_API_URL: process.env.NEXT_PUBLIC_API_URL,
    DATABASE_URL: process.env.DATABASE_URL
  },
  redirects: [
    {
      source: "/old-url",
      destination: "/new-url",
      statusCode: 301
    }
  ],
  headers: [
    {
      source: "/_next/*",
      headers: [
        { key: "Cache-Control", value: "s-maxage=1, stale-while-revalidate=5" },
        { key: "X-Content-Type-Options", value: "nosniff" }
      ]
    }
  ],
  cache: [
    {
      urlPattern: "/api/*",
      options: { immutable: true, maxAgeSeconds: 3600 }
    }
  ],
  framework: {
    vercel: {
      buildCommand: "next build",
      startCommand: "next start"
    },
    netlify: {
      build: { command: "yarn run build" },
      functions: ".vercel/functions",
      redirects: "_redirects",
      headers: "_headers"
    }
  }
};

